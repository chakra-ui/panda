{
  "name": "@pandacss/vite",
  "version": "1.8.2",
  "description": "Vite plugin for Panda CSS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "Segun Adebayo <joseshegs@gmail.com>",
  "license": "MIT",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup src/index.ts --format=cjs,esm --shims --dts",
    "build-fast": "tsup src/index.ts --format=cjs,esm --shims --no-dts",
    "dev": "pnpm build-fast --watch"
  },
  "sideEffects": false,
  "homepage": "https://panda-css.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/panda.git",
    "directory": "packages/vite"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "dependencies": {
    "@pandacss/node": "workspace:*",
    "@pandacss/config": "workspace:*",
    "@pandacss/core": "workspace:*",
    "@pandacss/logger": "workspace:*",
    "@pandacss/types": "workspace:*",
    "magic-string": "^0.30.0"
  }
}
