{
  "name": "css-panda",
  "version": "0.0.1",
  "description": "The user facing package for panda css",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "Segun Adebayo <joseshegs@gmail.com>",
  "bin": {
    "panda": "bin.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./presets": {
      "import": "./dist/presets.mjs",
      "require": "./dist/presets.js",
      "types": "./dist/presets.d.ts"
    },
    "./postcss": "./postcss.js",
    "./astro": {
      "import": "./astro.mjs",
      "types": "./astro.d.ts"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "presets": [
        "./dist/presets.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/cli-*.ts src/presets.ts src/index.ts --format=esm,cjs --dts --no-splitting --shims",
    "postbuild": "pnpm app:gen",
    "build-fast": "tsup src/cli-*.ts src/presets.ts src/index.ts --format=esm,cjs --no-dts --no-splitting --shims",
    "dev": "pnpm build-fast --watch",
    "css": "dist/cli-default.js",
    "app": "cd app && ../dist/cli-default.js --clean",
    "app:dev": "cd app && ../dist/cli-default.js --watch",
    "app:gen": "cd app && ../dist/cli-default.js codegen --clean"
  },
  "files": [
    "dist",
    "bin",
    "app",
    "bin.js",
    "postcss.js",
    "astro.mjs"
  ],
  "dependencies": {
    "@astrojs/react": "^2.0.0",
    "@pandacss/config": "workspace:*",
    "@pandacss/error": "workspace:*",
    "@pandacss/logger": "workspace:*",
    "@pandacss/node": "workspace:*",
    "@pandacss/shared": "workspace:*",
    "@pandacss/token-dictionary": "workspace:*",
    "@pandacss/types": "workspace:*",
    "astro": "^2.0.1",
    "cac": "6.7.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.0.4"
  },
  "devDependencies": {
    "@pandacss/presets": "workspace:*",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.10",
    "@types/update-notifier": "^6.0.1",
    "@vitejs/plugin-react": "^3.0.1",
    "execa": "^7.0.0",
    "kleur": "^4.1.5",
    "update-notifier": "^6.0.2"
  }
}
