---
import { Container, panda, Stack } from '../../styled-system/jsx'
import '../../styled-system/styles.css'
import SideNav from '../components/side-nav.astro'
import { customDocs } from '../utils/custom-docs'
---

<panda.main display="flex" height="calc(100vh - env(safe-area-inset-bottom))">
  <Stack height="full" minW="60" overflow="auto" px="12" py="8">
    <panda.a title={customDocs.title} fontWeight="bold" fontSize="2xl" href="/" display="flex" gap="2">
      <customDocs.logo />
    </panda.a>
    <SideNav />
  </Stack>

  <Container width="full">
    <panda.div overflow="auto" px="4" py="8">
      <slot />
    </panda.div>
  </Container>
</panda.main>
