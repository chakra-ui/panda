{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@pandacss/fixture": ["./packages/fixture/src/index.ts"]
    }
  },
  "include": ["packages/**/*.ts"],
  "types": ["vitest/globals"],
