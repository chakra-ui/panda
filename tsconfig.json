{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "incremental": true,
    // "emitDeclarationOnly": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".", // This is important for the path aliases to work
    "paths": {
      "@pandacss/*": ["packages/*/src"]
    }
  },
  "include": ["packages"],
  "types": ["vitest/globals"],
  "exclude": ["node_modules", "./packages/cli/app", "./packages/extractor/__tests__/samples"]
}
