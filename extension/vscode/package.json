{
  "publisher": "chakra-ui",
  "name": "panda-css-vscode",
  "displayName": "üêº Panda CSS",
  "description": "The official Panda plugin for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.2"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "license": "MIT",
  "keywords": [
    "css",
    "design tokens",
    "documentation",
    "framework",
    "design system",
    "design",
    "tokens",
    "panda",
    "semantic",
    "w3c"
  ],
  "main": "./dist/index.js",
  "preview": true,
  "contributes": {
    "commands": [
      {
        "command": "panda-css-vscode.restart",
        "title": "Restart Panda Server",
        "category": "Panda"
      },
      {
        "command": "panda-css-vscode.show-output",
        "title": "Show panda output",
        "category": "Panda"
      }
    ]
  },
  "repository": {
    "url": "https://github.com/chakra-ui/panda",
    "directory": "packages/extension/vscode"
  },
  "scripts": {
    "build:lsp": "pnpm --filter=../language-server build",
    "build": "pnpm build:lsp && tsup --entry src/index.ts --entry src/server.ts --format cjs --external vscode --external esbuild --minify -d dist --clean --shims",
    "dev": "tsup --entry src/index.ts --entry src/server.ts --watch --format cjs --external vscode --external esbuild -d dist --clean --shims --watch . --watch ../language-server/dist",
    "clean": "rm -rf dist",
    "lint": "eslint ./src --ext .ts,.tsx --fix",
    "release": "esno ./scripts/publish.ts",
    "package": "vsce package --pre-release --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/vsce": "^2.19.0",
    "esno": "^0.16.3",
    "execa": "7.1.1",
    "fs-extra": "11.1.1",
    "panda-css-language-server": "workspace:*",
    "tsup": "6.7.0",
    "typescript": "^5.0.4",
    "vscode": "^1.1.37",
    "vscode-languageclient": "^8.1.0"
  }
}
