{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/extension/vscode"],
      "outFiles": ["${workspaceFolder}/extension/vscode/dist/**/*.js"]
    },
    {
      "command": "pnpm test ${relativeFile}",
      "name": "Run Vitest",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
